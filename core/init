#!/bin/bash

 
#get libraries
   
#get database
sudo apt-get install redis-server

#get database bash client
git clone https://github.com/caquino/redis-bash.git redis-bash

#make marvin
echo '#!/bin/bash

LIB="$(pwd)/lib"
COMMAND="$@"
NAME=$(./core/redis-bash/redis-bash-cli -h localhost GET username)

function traverse {
   for f in $1/*
   do
       if [ -f $f ]; then
           source $f
       elif [ -d $f ]; then
           traverse $f
       fi
   done
}

traverse $LIB

if [[ $COMMAND =~ "hello" ]]
then
    echo "hey!"
    read -p "What is your name? "
    NAME="$REPLY"
    SAVE=$(./core/redis-bash/redis-bash-cli -h localhost SET username $NAME)
    echo "Ok, $NAME"
elif [[ $COMMAND =~ "help" ]]
then
    commands.list-actions
fi' > brain
chmod +x brain

echo '#!/bin/bash
cd core && ./start' > ../marvin
chmod +x ../marvin

