 function capacities.ask {
         DONE=false
         if [ ! -z "$2" ]; then
             OPT=" -i $2"
         else
             OPT=""
         fi
         until $DONE; do
         capacities.tell "$1"
         read -r -e -p "" REPLY < /dev/tty
         if [ ! -z "$REPLY" ]; then
             DONE=true
         fi
         done
 }
