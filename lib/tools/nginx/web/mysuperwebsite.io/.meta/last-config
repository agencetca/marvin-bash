
server {

	server_name www.mysuperwebsite.io mysuperwebsite.io;
	return 301 https://localhost:8006$request_uri;
	listen 8006;

	#ACCESS_LOGS;
	#ERROR_LOGS;
	
	location /.meta/ {
	  return 404;
	}
	

}

server {

	server_name www.mysuperwebsite.io mysuperwebsite.io;
	root /home/manager/Projects/marvin/lib/tools/nginx/web/mysuperwebsite.io;
	listen 8006 ssl;
	index index.php index.html;

	access_log /var/log/nginx/mysuperwebsite.io.access.log;
	error_log /var/log/nginx/mysuperwebsite.io.error.log;
	
	ssl_certificate /etc/nginx/ssl/mysuperwebsite.io/server.crt;
	ssl_certificate_key /etc/nginx/ssl/mysuperwebsite.io/server.key;
	ssl_protocols	TLSv1 TLSv1.1 TLSv1.2;
	ssl_ciphers	HIGH:!aNULL:!MD5;
	
	location /.meta/ {
	  return 404;
	}
	
	location ~ \.php$ {
	    fastcgi_split_path_info ^(.+\.php)(/.+)$;
	    fastcgi_pass unix:/var/run/php5-fpm.sock;
	    fastcgi_index index.php;
	    include fastcgi_params;
	    include fastcgi.conf;
	}

}
